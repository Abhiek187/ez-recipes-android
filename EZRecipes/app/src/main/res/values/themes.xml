<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.EZRecipes" parent="android:Theme.Material.Light.NoActionBar">
        <item name="android:statusBarColor">@color/blue_700</item>
    </style>

    <!-- Splash screen theme -->
    <style name="Theme.App.Starting" parent="Theme.SplashScreen">
        <!-- If the icon doesn't show, try to run it from the launcher instead
             https://stackoverflow.com/a/69831106 -->
        <item name="windowSplashScreenAnimatedIcon">@mipmap/ic_launcher</item>
        <item name="postSplashScreenTheme">@style/Theme.EZRecipes</item>
    </style>
</resources>
